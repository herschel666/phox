{
  "rulesDirectory": ["./node_modules/tslint-microsoft-contrib"],
  "extends": "tslint-microsoft-contrib/recommended_ruleset",
  "rules": {
    "align": [true, "parameters", "statements"],
    "export-name": [0],
    "import-name": [0],
    "max-line-length": [true, 100],
    "missing-jsdoc": [0],
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-unsafe-any": false,
    "no-cookies": [0],
    "no-inner-html": false,
    "no-default-export": [0],
    "no-empty-line-after-opening-brace": true,
    "no-http-string": false,
    "no-relative-imports": [0],
    "no-require-imports": false,
    "no-var-requires": false,
    "ordered-imports": false,
    "prefer-type-cast": false,
    "quotemark": [true, "single", "jsx-double"],
    "switch-default": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "variable-name": [true, "ban-keywords"],
    "react-iframe-missing-sandbox": false,
    "react-tsx-curly-spacing": false,
    "mocha-no-side-effect-code": false,
    "strict-boolean-expressions": false,
    "typedef": false,
    "completed-docs": false,
    "member-ordering": [
      true,
      {
        "order": ["protected-instance-method", "public-instance-method"]
      }
    ],
    "no-void-expression": false,
    "prefer-method-signature": false,
    "interface-name": [true, "never-prefix"],
    "newline-before-return": false,
    "no-multiline-string": false,
    "await-promise": false,
    "no-implicit-dependencies": [true, "dev"],
    "no-console": [true, "log", "info"]
  }
}
