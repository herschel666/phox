#!/usr/bin/env bash

set -ev

EXIT_CODE=0

yarn run build
cd examples/simple
yarn
cp ../../index.js node_modules/phox/
cp -fRv ../../lib node_modules/phox/
node server.js > /dev/null 2>&1 &
PID=$!
sleep 5
cd ../..
if [[ "$1" == "-u" ]]; then
  npx jest -u --testRegex="\/server\/" || EXIT_CODE=1
else
  npx jest --testRegex="\/server\/" || EXIT_CODE=1
fi
kill $PID
if [[ "$EXIT_CODE" == "1" ]]; then
  exit $EXIT_CODE
fi
