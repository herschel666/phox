{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "typeRoots": ["lib/definitions", "node_modules/@types"],
    "lib": ["dom", "es7"]
